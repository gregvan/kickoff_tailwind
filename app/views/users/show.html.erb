<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">User</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to users_path, class: button_class(theme: "transparent") do %>
      All Users
      <% end %>
      <%= link_to edit_user_path(@user), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">First name:</p>
        <p><%= @user.first_name %></p>
      </li>
      <li>
        <p class="font-semibold">Last name:</p>
        <p><%= @user.last_name %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @user.email %></p>
      </li>
      <li>
        <p class="font-semibold">Admin:</p>
        <p><%= @user.admin %></p>
      </li>
  </ul>
</div>
